<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Baehub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Keep native chrome consistent with app branding in dark mode, too. -->
        <item name="colorPrimary">@color/baehub_primary</item>
        <item name="colorPrimaryVariant">@color/baehub_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/baehub_secondary</item>
        <item name="colorSecondaryVariant">@color/baehub_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/baehub_surface</item>
        <item name="colorOnSurface">@color/baehub_on_surface</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="toolbarStyle">@style/Widget.Baehub.Toolbar</item>
    </style>

    <style name="Widget.Baehub.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/baehub_on_surface</item>
        <item name="subtitleTextColor">@color/baehub_on_surface</item>
        <item name="navigationIconTint">@color/baehub_on_surface</item>
    </style>
</resources>
