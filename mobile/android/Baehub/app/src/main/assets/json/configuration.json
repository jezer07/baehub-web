{
  "settings": {},
  "rules": [
    {
      "patterns": [".*"],
      "properties": {
        "context": "default",
        "uri": "hotwire://fragment/web",
        "pull_to_refresh_enabled": true
      }
    },
    {
      "patterns": ["/tasks$", "/events$", "/expenses$"],
      "properties": {
        "context": "default",
        "uri": "hotwire://fragment/web/list",
        "pull_to_refresh_enabled": true
      }
    },
    {
      "patterns": [
        "/tasks/new$",
        "/tasks/\\d+/edit$",
        "/events/new$",
        "/events/\\d+/edit$",
        "/expenses/new$",
        "/expenses/\\d+/edit$",
        "/settlements/new$",
        "/settlements/\\d+/edit$",
        "/pairing/new$",
        "/tasks/filters$",
        "/events/filters$",
        "/expenses/filters$"
      ],
      "properties": {
        "context": "modal",
        "uri": "hotwire://fragment/web/modal/sheet",
        "pull_to_refresh_enabled": false
      }
    }
  ]
}
