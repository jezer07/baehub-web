<%
  frame_id = local_assigns.fetch(:frame_id, "task_#{task.id}")
  field_classes = "w-full px-3 py-2 text-sm border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
  label_classes = "block text-sm font-medium text-neutral-700 mb-1"
%>

<%= turbo_frame_tag frame_id do %>
  <li class="flex flex-col gap-4 rounded-2xl border border-primary-200 bg-primary-50 px-6 py-4" data-controller="task-item">
    <% if task.errors.any? %>
      <div class="rounded-lg bg-red-50 border border-red-200 px-4 py-3">
        <p class="text-sm font-medium text-red-800">
          <%= pluralize(task.errors.count, "error") %> prohibited this from being saved:
        </p>
        <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: task, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="md:col-span-2">
          <%= f.label :title, "Task title", class: label_classes %>
          <%= f.text_field :title, required: true, autofocus: true, class: field_classes %>
        </div>

        <div class="md:col-span-2">
          <%= f.label :description, "Description (optional)", class: label_classes %>
          <%= f.text_area :description, rows: 3, class: field_classes %>
        </div>

        <div>
          <%= f.label :status, "Status", class: label_classes %>
          <%= f.select :status, Task.statuses.keys.map { |s| [s.humanize, s] }, {}, class: field_classes %>
        </div>

        <div>
          <%= f.label :priority, "Priority", class: label_classes %>
          <%= f.select :priority, Task.priorities.keys.map { |p| [p.humanize, p] }, {}, class: field_classes %>
        </div>

        <div>
          <%= f.label :due_at, "Due date (optional)", class: label_classes %>
          <%= f.datetime_local_field :due_at, class: field_classes %>
        </div>

        <div>
          <%= f.label :assignee_id, "Assign to (optional)", class: label_classes %>
          <%= f.collection_select :assignee_id, current_user.couple.users, :id, :name, { include_blank: "Unassigned" }, class: field_classes %>
        </div>
      </div>

      <div class="flex justify-end gap-2 pt-2">
        <%= link_to "Cancel", task_path(task), data: { turbo_frame: frame_id, task_item_target: "cancelButton" }, class: "px-4 py-2 text-sm font-medium text-neutral-700 bg-white border border-neutral-300 rounded-lg hover:bg-neutral-50 transition-colors" %>
        <%= f.submit "Save changes", class: "px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-colors" %>
      </div>
    <% end %>
  </li>
<% end %>
