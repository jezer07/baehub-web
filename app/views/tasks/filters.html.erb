<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12">
  <div class="max-w-lg mx-auto px-4 space-y-6">
    <h1 class="text-2xl font-bold text-neutral-900">Filter tasks</h1>

    <%= form_with url: filters_tasks_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-1">Status</label>
        <%= f.select :status, [["All statuses", ""]] + Task.statuses.keys.map { |s| [s.humanize, s] }, { selected: params[:status] }, class: "form-control w-full px-4 py-3", name: "status" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-1">Assignee</label>
        <%= f.collection_select :assignee_id, current_user.couple.users, :id, :name, { include_blank: "All assignees", selected: params[:assignee_id] }, class: "form-control w-full px-4 py-3", name: "assignee_id" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-1">Due date</label>
        <%= f.date_field :due_on, value: params[:due_on], class: "form-control w-full px-4 py-3", name: "due_on" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-1">Sort by</label>
        <%= f.select :sort, [["Default", ""], ["Status (Asc)", "status_asc"], ["Due date (Earliest)", "due_at_asc"], ["Due date (Latest)", "due_at_desc"], ["Priority (High)", "priority_desc"]], { selected: params[:sort] }, class: "form-control w-full px-4 py-3", name: "sort" %>
      </div>

      <div class="flex items-center gap-3 pt-2">
        <%= f.submit "Apply", class: "btn-primary flex-1 justify-center" %>
        <%= link_to "Clear filters", filters_tasks_path, data: { turbo_method: :post }, class: "btn-secondary flex-1 text-center justify-center" %>
      </div>
    <% end %>
  </div>
</div>
