<% if task.errors.any? %>
  <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-semibold text-red-800 mb-2">
          <%= pluralize(task.errors.count, "error") %> prohibited this from being saved:
        </h3>
        <ul class="list-disc list-inside space-y-1">
          <% task.errors.full_messages.each do |message| %>
            <li class="text-sm text-red-700"><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<%= form_with model: task, class: "space-y-5" do |f| %>
  <div>
    <%= f.label :title, "Task title", class: "block text-sm font-medium text-neutral-700 mb-1" %>
    <%= f.text_field :title, required: true, autofocus: true, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
  </div>

  <div>
    <%= f.label :description, "Description (optional)", class: "block text-sm font-medium text-neutral-700 mb-1" %>
    <%= f.text_area :description, rows: 4, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
  </div>

  <div>
    <%= f.label :status, "Status", class: "block text-sm font-medium text-neutral-700 mb-1" %>
    <%= f.select :status, Task.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
  </div>

  <div>
    <%= f.label :priority, "Priority", class: "block text-sm font-medium text-neutral-700 mb-1" %>
    <%= f.select :priority, Task.priorities.keys.map { |p| [p.humanize, p] }, {}, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
  </div>

  <div>
    <%= f.label :due_at, "Due date (optional)", class: "block text-sm font-medium text-neutral-700 mb-1" %>
    <%= f.datetime_local_field :due_at, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
  </div>

  <div>
    <%= f.label :assignee_id, "Assign to (optional)", class: "block text-sm font-medium text-neutral-700 mb-1" %>
    <%= f.collection_select :assignee_id, current_user.couple.users, :id, :name, { include_blank: "Unassigned" }, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
  </div>

  <% if local_assigns[:redirect_to].present? %>
    <%= hidden_field_tag :redirect_to, local_assigns[:redirect_to] %>
  <% end %>

  <div class="flex justify-end">
    <%= f.submit class: "btn-primary px-6" %>
  </div>
<% end %>
