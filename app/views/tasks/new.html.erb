<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12">
  <div class="max-w-2xl mx-auto px-4">
    <%= link_to "← Back to tasks", tasks_path, class: "text-sm text-neutral-600 hover:text-primary-600 inline-flex items-center gap-1 mb-6" %>

    <h1 class="text-3xl font-bold text-neutral-900 mb-2">Create new task</h1>
    <p class="text-neutral-600 mb-8">Add a task to your shared to-do list</p>

    <div class="bg-white rounded-3xl shadow-xl shadow-primary-900/5 border border-neutral-100 p-8">
      <%= render "form", task: @task %>
    </div>
  </div>
</div>
