<%
  frame_id = request.headers["Turbo-Frame"] || "task_#{@task.id}"
  is_dashboard = frame_id.start_with?("dashboard_")
%>

<%= turbo_stream.replace frame_id do %>
  <%= render partial: "tasks/task_item", locals: { 
    task: @task, 
    show_link: true, 
    compact: is_dashboard, 
    frame_id: frame_id 
  } %>
<% end %>

