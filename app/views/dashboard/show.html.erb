<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12 relative z-0" data-controller="task-modal event-modal expense-modal">
  <div class="max-w-6xl mx-auto px-4 space-y-10 relative z-10">
    <section class="bg-white rounded-3xl shadow-xl shadow-primary-900/5 border border-neutral-100 overflow-hidden">
      <div class="p-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
          <div>
            <p class="text-sm font-semibold uppercase tracking-wide text-primary-500 mb-2">Shared home</p>
            <h1 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-3"><%= @couple.name %></h1>
            <p class="text-neutral-600 max-w-2xl">
              Keep your plans, promises, and payments aligned. This dashboard surfaces what’s next so you can spend more time together.
            </p>
          </div>
          <div class="flex flex-col sm:flex-row items-stretch gap-3">
            <%= link_to "Pair another device", new_pairing_path, class: "btn-secondary justify-center" %>
            <%= link_to "Invite your partner", new_pairing_path, class: "btn-primary justify-center" %>
          </div>
        </div>
      </div>
      <% if @couple.story.present? %>
        <div class="px-8 py-6 bg-neutral-50 border-t border-neutral-100">
          <p class="text-sm text-neutral-600 leading-relaxed"><span class="font-semibold text-neutral-800">Your story:</span> <%= @couple.story %></p>
        </div>
      <% end %>
    </section>

    <% if @couple.users.size < 2 %>
      <div class="rounded-3xl bg-primary-600 text-white p-6 shadow-lg shadow-primary-500/30 flex flex-col sm:flex-row gap-4 sm:items-center sm:justify-between">
        <div>
          <p class="font-semibold text-lg">Still waiting for your person?</p>
          <p class="text-primary-50">Share the freshest code so they can join — reminders and shared balances work best when you’re both in.</p>
        </div>
        <% if @active_invitations.any? %>
          <div class="flex gap-2">
            <% @active_invitations.each do |invitation| %>
              <span class="inline-flex items-center justify-center px-4 py-2 rounded-xl bg-white/15 font-mono text-sm tracking-wider"><%= invitation.code %></span>
            <% end %>
          </div>
        <% else %>
          <%= link_to "Generate invite", new_pairing_path, class: "btn-secondary bg-white text-primary-700 hover:bg-primary-50 hover:text-primary-800" %>
        <% end %>
      </div>
    <% end %>

    <section class="grid lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2 bg-white rounded-3xl shadow-lg shadow-primary-900/5 border border-neutral-100 p-8">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="text-2xl font-semibold text-neutral-900">Shared focus</h2>
            <p class="text-sm text-neutral-500">Top tasks that keep your rhythm steady</p>
          </div>
          <button type="button" class="btn-primary" data-action="click->task-modal#open">Add task</button>
        </div>

        <% if @tasks.any? %>
          <ul class="space-y-4">
            <% @tasks.each do |task| %>
              <%= render "tasks/task_item", task: task, show_link: true, compact: true, frame_id: "dashboard_task_#{task.id}" %>
            <% end %>
          </ul>
        <% else %>
          <div class="rounded-2xl border border-dashed border-neutral-200 p-8 text-center">
            <p class="text-neutral-500">No shared tasks yet—add your first to-do and watch the timeline come alive.</p>
          </div>
        <% end %>
      </div>

      <div class="bg-white rounded-3xl shadow-lg shadow-primary-900/5 border border-neutral-100 p-8 space-y-8">
        <div>
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-neutral-900">Upcoming moments</h2>
            <button type="button" class="btn-primary px-3 py-2" data-action="click->event-modal#open">Add event</button>
          </div>
          <% if @events.any? %>
            <ul class="space-y-4">
              <% @events.each do |event| %>
                <%= render "events/event_item", event: event, show_link: true, compact: true %>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-neutral-500">No events on the horizon—drop in your next date night or appointment.</p>
          <% end %>
        </div>

        <div>
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-neutral-900">Bills & balances</h2>
            <button type="button" class="btn-primary px-3 py-2" data-action="click->expense-modal#open">Log expense</button>
          </div>
          <% if @expenses.any? %>
            <ul class="space-y-4">
              <% @expenses.each do |expense| %>
                <%= render "expenses/expense_item", expense: expense, show_link: true, compact: true %>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-neutral-500">No expenses yet—split the next bill in a snap.</p>
          <% end %>
        </div>
      </div>
    </section>

    <section class="bg-white rounded-3xl shadow-lg shadow-primary-900/5 border border-neutral-100 p-8">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-semibold text-neutral-900">Recent story beats</h2>
        <button type="button" class="btn-secondary opacity-70 cursor-not-allowed px-3 py-2">View full history</button>
      </div>
      <% if @activity_logs.any? %>
        <ul class="space-y-4">
          <% @activity_logs.each do |log| %>
            <li class="flex flex-col md:flex-row md:items-center md:justify-between gap-3 rounded-2xl border border-neutral-100 bg-neutral-50 px-4 py-3">
              <div class="flex items-start gap-3">
                <% if log.subject_type == 'Task' %>
                  <svg class="h-5 w-5 text-primary-600 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                  </svg>
                <% elsif log.subject_type == 'Event' %>
                  <svg class="h-5 w-5 text-purple-600 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                <% elsif log.subject_type == 'EventResponse' %>
                  <svg class="h-5 w-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                <% elsif log.subject_type == 'Expense' %>
                  <svg class="h-5 w-5 text-green-600 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                <% else %>
                  <svg class="h-5 w-5 text-neutral-600 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                <% end %>
                <div>
                  <p class="text-neutral-800 font-medium">
                    <%= log.action %>
                    <% if log.subject_type == 'Task' && log.subject.nil? %>
                      <span class="text-neutral-400 font-normal">(deleted)</span>
                    <% elsif log.subject_type == 'Event' && log.subject.nil? %>
                      <span class="text-neutral-400 font-normal">(deleted)</span>
                    <% elsif log.subject_type == 'EventResponse' && log.subject&.event.present? %>
                      <%= link_to log.subject.event.title, event_path(log.subject.event), class: "text-primary-600 hover:text-primary-700 font-medium ml-1" %>
                    <% end %>
                  </p>
                  <% if log.user %>
                    <p class="text-sm text-neutral-500">by <%= log.user == current_user ? "you" : log.user.name %></p>
                  <% end %>
                </div>
              </div>
              <div class="text-sm text-neutral-500 ml-8 md:ml-0"><%= log.created_at.strftime("%b %d, %Y %l:%M %p") %></div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-neutral-500">Complete a task, add an event, or invite your partner to start building history.</p>
      <% end %>
    </section>
  </div>

  <!-- Task Modal -->
  <div class="fixed inset-0 bg-black/50 z-30 hidden opacity-0 transition-opacity duration-300 pointer-events-none" data-task-modal-target="backdrop" data-action="click->task-modal#close"></div>

  <div class="fixed top-0 right-0 h-full w-full md:w-2/3 lg:w-1/2 bg-white shadow-2xl z-50 transform translate-x-full transition-transform duration-300 hidden overflow-y-auto" data-task-modal-target="modal">
    <!-- Modal Header -->
    <div class="sticky top-0 bg-white border-b border-neutral-200 p-6 flex justify-between items-center z-10">
      <h2 class="text-2xl font-bold text-neutral-900">Quick add task</h2>
      <button type="button" class="p-2 rounded-md text-neutral-700 hover:text-primary-600 hover:bg-neutral-100" data-action="click->task-modal#close">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Modal Form -->
    <div class="p-6">
      <% quick_task = current_user.couple.tasks.build(creator: current_user) %>
      <%= render "tasks/form", task: quick_task, redirect_to: dashboard_path %>
    </div>
  </div>

  <!-- Event Modal -->
  <div class="fixed inset-0 bg-black/50 z-30 hidden opacity-0 transition-opacity duration-300 pointer-events-none" data-event-modal-target="backdrop" data-action="click->event-modal#close"></div>

  <div class="fixed top-0 right-0 h-full w-full md:w-2/3 lg:w-1/2 bg-white shadow-2xl z-50 transform translate-x-full transition-transform duration-300 hidden overflow-y-auto" data-event-modal-target="modal">
    <!-- Modal Header -->
    <div class="sticky top-0 bg-white border-b border-neutral-200 p-6 flex justify-between items-center z-10">
      <h2 class="text-2xl font-bold text-neutral-900">Quick add event</h2>
      <button type="button" class="p-2 rounded-md text-neutral-700 hover:text-primary-600 hover:bg-neutral-100" data-action="click->event-modal#close">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Modal Form -->
    <div class="p-6">
      <% quick_event = current_user.couple.events.build(creator: current_user) %>
      <%= render "events/form", event: quick_event %>
    </div>
  </div>

  <!-- Expense Modal -->
  <div class="fixed inset-0 bg-black/50 z-30 hidden opacity-0 transition-opacity duration-300 pointer-events-none" data-expense-modal-target="backdrop" data-action="click->expense-modal#close"></div>

  <div class="fixed top-0 right-0 h-full w-full md:w-2/3 lg:w-1/2 bg-white shadow-2xl z-50 transform translate-x-full transition-transform duration-300 hidden overflow-y-auto" data-expense-modal-target="modal">
    <!-- Modal Header -->
    <div class="sticky top-0 bg-white border-b border-neutral-200 p-6 flex justify-between items-center z-10">
      <h2 class="text-2xl font-bold text-neutral-900">Quick add expense</h2>
      <button type="button" class="p-2 rounded-md text-neutral-700 hover:text-primary-600 hover:bg-neutral-100" data-action="click->expense-modal#close">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Modal Form -->
    <div class="p-6">
      <% quick_expense = current_user.couple.expenses.build(spender: current_user, incurred_on: Date.today) %>
      <% couple_users = current_user.couple.users.to_a %>
      <%= render "expenses/form", expense: quick_expense, couple_users: couple_users %>
    </div>
  </div>
</div>
