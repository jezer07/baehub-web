<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12">
  <div class="max-w-2xl mx-auto px-4">
    <div class="bg-white rounded-3xl shadow-xl shadow-primary-900/5 border border-neutral-100 p-8">
      <div class="mb-6">
        <div class="flex items-center gap-3 mb-2">
          <%= link_to joint_account_path(@joint_account), class: "text-neutral-400 hover:text-neutral-600" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <h1 class="text-3xl font-bold text-neutral-900">Edit Joint Account</h1>
        </div>
        <p class="text-neutral-600">Update joint account details</p>
      </div>

      <%= form_with model: @joint_account, url: joint_account_path(@joint_account), method: :patch, class: "space-y-6" do |f| %>
        <div>
          <label class="block text-sm font-medium text-neutral-700 mb-2">Account Name</label>
          <%= f.text_field :name, class: "form-control w-full px-4 py-3", required: true %>
        </div>

        <div>
          <label class="block text-sm font-medium text-neutral-700 mb-2">Currency</label>
          <%= f.select :currency, 
                        CurrencyCatalog.codes.map { |code| [code, code] }, 
                        {}, 
                        class: "form-control w-full px-4 py-3" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-neutral-700 mb-2">Status</label>
          <%= f.select :status, 
                        JointAccount.statuses.keys.map { |status| [status.titleize, status] }, 
                        {}, 
                        class: "form-control w-full px-4 py-3" %>
        </div>

        <div class="flex gap-3 pt-4">
          <%= f.submit "Update Joint Account", class: "btn-primary flex-1 justify-center" %>
          <%= link_to "Cancel", joint_account_path(@joint_account), class: "btn-secondary flex-1 justify-center" %>
        </div>
      <% end %>

      <div class="mt-8 pt-8 border-t border-neutral-200">
        <h3 class="text-lg font-semibold text-neutral-900 mb-4">Danger Zone</h3>
        <%= button_to "Archive Joint Account", joint_account_path(@joint_account), 
                       method: :delete, 
                       class: "btn-secondary text-red-600 border-red-300 hover:bg-red-50",
                       data: { confirm: "Are you sure? This will archive the joint account. You cannot delete accounts with unsettled transactions." } %>
      </div>
    </div>
  </div>
</div>

