<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12">
  <div class="max-w-2xl mx-auto px-4">
    <div class="bg-white rounded-3xl shadow-xl shadow-primary-900/5 border border-neutral-100 p-8">
      <div class="mb-6">
        <div class="flex items-center gap-3 mb-2">
          <%= link_to joint_accounts_path, class: "text-neutral-400 hover:text-neutral-600" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <h1 class="text-3xl font-bold text-neutral-900">Create Joint Account</h1>
        </div>
        <p class="text-neutral-600">Set up a shared account to track borrowing</p>
      </div>

      <%= form_with model: @joint_account, url: joint_accounts_path, class: "space-y-6" do |f| %>
        <div>
          <label class="block text-sm font-medium text-neutral-700 mb-2">Account Name</label>
          <%= f.text_field :name, class: "form-control w-full px-4 py-3", placeholder: "e.g., Vacation Fund, Home Projects", required: true %>
        </div>

        <div>
          <label class="block text-sm font-medium text-neutral-700 mb-2">Currency</label>
          <%= f.select :currency, 
                        CurrencyCatalog.codes.map { |code| [code, code] }, 
                        { selected: current_user.couple.default_currency }, 
                        class: "form-control w-full px-4 py-3" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-neutral-700 mb-2">Add Members</label>
          <div class="space-y-2">
            <% @couple_users.each do |user| %>
              <label class="flex items-center p-3 rounded-lg border border-neutral-200 hover:border-primary-300 cursor-pointer transition-colors">
                <%= check_box_tag "joint_account[member_ids][]", user.id, 
                                   user.id == current_user.id, 
                                   class: "form-checkbox h-5 w-5 text-primary-600 rounded" %>
                <span class="ml-3 text-sm font-medium text-neutral-900">
                  <%= user.name %>
                  <% if user.id == current_user.id %>
                    <span class="text-xs text-neutral-500">(You)</span>
                  <% end %>
                </span>
              </label>
            <% end %>
          </div>
        </div>

        <div class="flex gap-3 pt-4">
          <%= f.submit "Create Joint Account", class: "btn-primary flex-1 justify-center" %>
          <%= link_to "Cancel", joint_accounts_path, class: "btn-secondary flex-1 justify-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

