<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12">
  <div class="max-w-4xl mx-auto px-4 space-y-8">
    <div class="bg-white rounded-3xl shadow-xl shadow-primary-900/5 border border-neutral-100 p-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <%= link_to joint_account_path(@joint_account), class: "text-neutral-400 hover:text-neutral-600" do %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            <% end %>
            <h1 class="text-3xl font-bold text-neutral-900"><%= @joint_account.name %> - Balances</h1>
          </div>
          <p class="text-neutral-600">Current outstanding balances</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-lg border border-neutral-200 p-6">
      <% if @balances.any? %>
        <div class="space-y-4">
          <% @balances.each do |balance| %>
            <div class="p-6 rounded-lg border-2 <%= balance.balance_cents < 0 ? 'border-red-200 bg-red-50' : balance.balance_cents > 0 ? 'border-green-200 bg-green-50' : 'border-neutral-200 bg-neutral-50' %>">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-semibold text-neutral-900"><%= balance.user.name %></h3>
                <span class="text-2xl font-bold <%= balance.balance_cents < 0 ? 'text-red-700' : balance.balance_cents > 0 ? 'text-green-700' : 'text-neutral-700' %>">
                  <%= balance.currency_symbol %><%= sprintf('%.2f', balance.balance_cents.abs / 100.0) %>
                </span>
              </div>

              <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                  <p class="text-sm text-neutral-600">Borrowed from account</p>
                  <p class="text-lg font-semibold text-neutral-900">
                    <%= balance.currency_symbol %><%= sprintf('%.2f', balance.borrowed_from_account_cents / 100.0) %>
                  </p>
                </div>
                <div>
                  <p class="text-sm text-neutral-600">Lent to account</p>
                  <p class="text-lg font-semibold text-neutral-900">
                    <%= balance.currency_symbol %><%= sprintf('%.2f', balance.lent_to_account_cents / 100.0) %>
                  </p>
                </div>
              </div>

              <div class="pt-4 border-t border-neutral-200">
                <p class="text-sm font-medium text-neutral-900">
                  <% if balance.balance_cents < 0 %>
                    Owes <%= balance.currency_symbol %><%= sprintf('%.2f', balance.balance_cents.abs / 100.0) %> to joint account
                  <% elsif balance.balance_cents > 0 %>
                    Joint account owes <%= balance.currency_symbol %><%= sprintf('%.2f', balance.balance_cents / 100.0) %>
                  <% else %>
                    Balanced
                  <% end %>
                </p>
                <p class="text-xs text-neutral-500 mt-1">Last calculated: <%= balance.last_calculated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-neutral-600 text-center py-8">No balances to display</p>
      <% end %>
    </div>
  </div>
</div>

