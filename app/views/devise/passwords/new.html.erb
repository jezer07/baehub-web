<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-4xl font-bold text-primary-600 mb-2">Forgot your password?</h2>
      <p class="text-neutral-600">No worries, we'll send you reset instructions</p>
    </div>

    <div class="card">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-full px-4 py-3" %>
          <p class="form-help">Enter your email address and we'll send you instructions to reset your password</p>
        </div>

        <div>
          <%= f.submit "Send reset instructions", class: "w-full btn-primary justify-center" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
