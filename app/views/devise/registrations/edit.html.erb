<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto space-y-8">
    <div class="text-center">
      <h2 class="text-4xl font-bold text-primary-600 mb-2">Account Settings</h2>
      <p class="text-neutral-600">Manage your profile information</p>
    </div>

    <div class="card">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-8" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-6">
          <h3 class="text-lg font-semibold text-neutral-800 border-b pb-2">Profile Information</h3>

          <div>
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, autofocus: true, class: "form-control w-full px-4 py-3" %>
          </div>

          <div>
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control w-full px-4 py-3" %>
          </div>

          <div>
            <%= f.label :avatar_url, "Avatar URL", class: "form-label" %>
            <%= f.text_field :avatar_url, class: "form-control w-full px-4 py-3" %>
            <p class="form-help">Add a link to your profile picture</p>
          </div>
        </div>

        <div class="space-y-6">
          <h3 class="text-lg font-semibold text-neutral-800 border-b pb-2">Change Password</h3>
          <p class="text-sm text-neutral-500">Leave password fields blank if you don't want to change it</p>

          <div>
            <%= f.label :password, "New password", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-full px-4 py-3" %>
            <% if @minimum_password_length %>
              <p class="form-help">Minimum <%= @minimum_password_length %> characters</p>
            <% end %>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-full px-4 py-3" %>
          </div>
        </div>

        <div class="space-y-6">
          <h3 class="text-lg font-semibold text-neutral-800 border-b pb-2">Confirm Changes</h3>
          <p class="text-sm text-neutral-500">We need your current password to confirm your changes</p>

          <div>
            <%= f.label :current_password, class: "form-label" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control w-full px-4 py-3" %>
          </div>
        </div>

        <div>
          <%= f.submit "Update account", class: "btn-primary" %>
        </div>
      <% end %>

      <div class="mt-8 pt-8 border-t border-neutral-200">
        <h3 class="text-lg font-semibold text-neutral-800 mb-4">Delete Account</h3>
        <p class="text-sm text-neutral-600 mb-4">Once you delete your account, there is no going back. Please be certain.</p>
        <%= button_to "Delete my account", registration_path(resource_name), data: { turbo_method: :delete, turbo_confirm: "Are you sure? This action cannot be undone." }, class: "btn-danger" %>
      </div>
    </div>

    <div class="text-center">
      <%= link_to "â† Back", :back, class: "text-primary-600 hover:text-primary-700" %>
    </div>
  </div>
</div>
