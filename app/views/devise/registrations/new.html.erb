<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-4xl font-bold text-primary-600 mb-2">Join Baehub</h2>
      <p class="text-neutral-600">Create your account and connect with your partner</p>
    </div>

    <div class="card">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control w-full px-4 py-3" %>
        </div>

        <div>
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control w-full px-4 py-3" %>
        </div>

        <div>
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-full px-4 py-3" %>
          <% if @minimum_password_length %>
            <p class="form-help">Minimum <%= @minimum_password_length %> characters</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-full px-4 py-3" %>
        </div>

        <div>
          <%= f.label :avatar_url, "Avatar URL (optional)", class: "form-label" %>
          <%= f.text_field :avatar_url, class: "form-control w-full px-4 py-3" %>
          <p class="form-help">Add a link to your profile picture</p>
        </div>

        <div>
          <%= f.submit "Sign up", class: "w-full btn-primary justify-center" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
