<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-4xl font-bold text-primary-600 mb-2">Welcome back to Baehub</h2>
      <p class="text-neutral-600">Sign in to connect with your partner</p>
    </div>

    <div class="card">
      <%= form_for(
        resource,
        as: resource_name,
        url: session_path(resource_name),
        html: { class: "space-y-6", data: { turbo_action: "replace" } }
      ) do |f| %>
        <div>
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-full px-4 py-3" %>
        </div>

        <div>
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-full px-4 py-3" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "form-checkbox" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-neutral-700" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "w-full btn-primary justify-center" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
