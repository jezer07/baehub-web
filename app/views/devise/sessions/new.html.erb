<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-4xl font-bold text-primary-600 mb-2">Welcome back to Baehub</h2>
      <p class="text-neutral-600">Sign in to connect with your partner</p>
    </div>

    <div class="card">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-neutral-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-neutral-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-neutral-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-neutral-700" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "w-full btn-primary justify-center" %>
        </div>
      <% end %>

      <div class="mt-6 text-center space-y-2">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-primary-600 hover:text-primary-700 block" %>
        <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-sm text-primary-600 hover:text-primary-700 block font-medium" %>
      </div>
    </div>
  </div>
</div>
