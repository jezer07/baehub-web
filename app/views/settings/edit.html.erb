<div class="bg-gradient-to-br from-white via-primary-50/40 to-pink-50/50 py-12">
  <div class="max-w-3xl mx-auto px-4">
    <div class="mb-8">
      <h1 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-2">Settings</h1>
      <p class="text-neutral-600">Manage shared preferences for <%= @couple.name %></p>
    </div>

    <div class="bg-white shadow-xl shadow-primary-900/5 rounded-3xl border border-neutral-100 p-8">
      <%= form_with model: @couple, url: settings_path, method: :patch, class: "space-y-6" do |f| %>
        <div class="border-b border-neutral-100 pb-6">
          <h2 class="text-xl font-semibold text-neutral-900 mb-4">Currency Settings</h2>
          <div>
            <%= f.label :default_currency, "Default Currency", class: "block text-sm font-medium text-neutral-700 mb-1" %>
            <%= f.select :default_currency, currency_options_for_select, { selected: @couple.default_currency }, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
            <p class="text-xs text-neutral-500 mt-1">This currency will be used as the default for all new expenses.</p>
          </div>
        </div>

        <div class="border-b border-neutral-100 pb-6">
          <h2 class="text-xl font-semibold text-neutral-900 mb-4">Couple Details</h2>
          <div class="space-y-4">
            <div>
              <%= f.label :name, "Couple name", class: "block text-sm font-medium text-neutral-700 mb-1" %>
              <%= f.text_field :name, required: true, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <%= f.label :anniversary_on, "Anniversary", class: "block text-sm font-medium text-neutral-700 mb-1" %>
                <%= f.date_field :anniversary_on, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
              </div>
              <div>
                <%= f.label :timezone, "Timezone", class: "block text-sm font-medium text-neutral-700 mb-1" %>
                <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.all, { default: @couple.timezone }, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
              </div>
            </div>
            <div>
              <%= f.label :story, "Your story", class: "block text-sm font-medium text-neutral-700 mb-1" %>
              <%= f.text_area :story, rows: 4, class: "w-full rounded-xl border-neutral-200 focus:ring-2 focus:ring-primary-400 focus:border-primary-400" %>
            </div>
          </div>
        </div>

        <div class="flex justify-end gap-3">
          <%= link_to "Cancel", dashboard_path, class: "btn-secondary px-6" %>
          <%= f.submit "Save Settings", class: "btn-primary px-6" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
