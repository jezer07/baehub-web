<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12">
  <div class="max-w-4xl mx-auto px-4 space-y-6">
    <%= link_to "â† Back to expenses", expenses_path, class: "text-sm text-neutral-600 hover:text-primary-600 inline-flex items-center gap-1" %>

    <div class="bg-white rounded-3xl shadow-xl shadow-primary-900/5 border border-neutral-100 overflow-hidden">
      <div class="p-8 <%= @expense.settled? ? 'bg-gradient-to-r from-success-50 to-success-100' : 'bg-gradient-to-r from-yellow-50 to-amber-50' %>">
        <h1 class="text-3xl font-bold text-neutral-900 mb-3"><%= @expense.title %></h1>
        <div class="text-4xl font-bold text-neutral-900 mb-3"><%= @expense.formatted_amount %></div>
        <div class="flex items-center gap-3 mb-2">
          <span class="<%= expense_status_badge_class(@expense) %>">
            <%= @expense.settled? ? "Settled" : "Unsettled" %>
          </span>
        </div>
        <p class="text-neutral-700">Incurred on <%= @expense.incurred_on.strftime("%B %d, %Y") %></p>
      </div>

      <div class="p-8 space-y-6">
        <% if @expense.notes.present? %>
          <div>
            <h2 class="text-sm font-medium text-neutral-500 mb-2">Notes</h2>
            <p class="text-neutral-700 leading-relaxed"><%= @expense.notes %></p>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-neutral-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <div>
              <div class="text-sm font-medium text-neutral-500">Paid by</div>
              <div class="text-neutral-900"><%= user_display_name(@expense.spender) %></div>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-neutral-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
            <div>
              <div class="text-sm font-medium text-neutral-500">Split strategy</div>
              <div class="text-neutral-900"><%= @expense.split_summary %></div>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-neutral-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <div class="text-sm font-medium text-neutral-500">Currency</div>
              <div class="text-neutral-900"><%= @expense.currency %> (<%= @expense.currency_symbol %>)</div>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-neutral-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <div>
              <div class="text-sm font-medium text-neutral-500">Date incurred</div>
              <div class="text-neutral-900"><%= @expense.incurred_on.strftime("%B %d, %Y") %></div>
            </div>
          </div>

          <% if @expense.settled? %>
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-success-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div>
                <div class="text-sm font-medium text-neutral-500">Settled date</div>
                <div class="text-neutral-900"><%= @expense.settled_at.strftime("%B %d, %Y at %I:%M %p") %></div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="border-t border-neutral-100 pt-6 mt-6">
          <h2 class="text-lg font-semibold text-neutral-900 mb-4">Split breakdown</h2>
          <div class="space-y-3">
            <% @expense.expense_shares.each do |share| %>
              <div class="flex items-center justify-between p-4 rounded-xl border border-neutral-200 hover:border-primary-200 hover:bg-primary-50/30 transition-all">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center">
                    <span class="text-primary-700 font-medium text-sm"><%= user_display_name(share.user)[0].upcase %></span>
                  </div>
                  <div>
                    <div class="font-medium text-neutral-900"><%= user_display_name(share.user) %></div>
                    <% if share.share_type == :percentage %>
                      <div class="text-sm text-neutral-600"><%= share.percentage %>%</div>
                    <% end %>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-lg font-bold text-neutral-900"><%= share.formatted_amount %></div>
                  <% if share.share_type == :percentage %>
                    <div class="text-xs text-neutral-500"><%= share.percentage %>% of total</div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="mt-4 pt-4 border-t border-neutral-200 flex justify-between items-center">
            <div class="font-bold text-neutral-900">Total</div>
            <div class="text-xl font-bold text-neutral-900"><%= @expense.formatted_amount %></div>
          </div>
        </div>
      </div>

      <div class="px-8 py-6 bg-neutral-50 border-t border-neutral-100 flex flex-col sm:flex-row gap-3 sm:justify-between">
        <%= link_to "Edit expense", edit_expense_path(@expense), class: "btn-secondary justify-center" %>
        <%= button_to "Delete expense", expense_path(@expense), method: :delete, data: { turbo_confirm: "Are you sure? This will delete the expense and all split records." }, class: "btn-secondary bg-error-600 text-white hover:bg-error-700 justify-center" %>
      </div>
    </div>
  </div>
</div>

