<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12">
  <div class="max-w-lg mx-auto px-4 space-y-6">
    <h1 class="text-2xl font-bold text-neutral-900">Filter transactions</h1>

    <%= form_with url: filters_expenses_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-1">Start date</label>
        <%= f.date_field :start_date, value: params[:start_date], class: "form-control w-full px-4 py-3" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-1">End date</label>
        <%= f.date_field :end_date, value: params[:end_date], class: "form-control w-full px-4 py-3" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-neutral-700 mb-1">Spender</label>
        <%= f.collection_select :spender_id, current_user.couple.users, :id, :name, { include_blank: "All spenders", selected: params[:spender_id] }, class: "form-control w-full px-4 py-3", name: "spender_id" %>
      </div>

      <div class="flex items-center gap-3 pt-2">
        <%= f.submit "Apply", class: "btn-primary flex-1 justify-center" %>
        <%= link_to "Clear filters", filters_expenses_path, data: { turbo_method: :post }, class: "btn-secondary flex-1 text-center justify-center" %>
      </div>
    <% end %>
  </div>
</div>
