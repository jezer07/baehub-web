<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12">
  <div id="flash-messages"></div>
  <div class="max-w-6xl mx-auto px-4 space-y-8">
    <% unless hotwire_native_app? %>
      <div class="bg-white rounded-3xl shadow-xl shadow-primary-900/5 border border-neutral-100 p-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
          <div>
            <h1 class="text-3xl font-bold text-neutral-900 mb-2">Expenses & Payments</h1>
            <p class="text-neutral-600">Track your shared expenses and payments</p>
          </div>
          <div>
            <%= link_to "Add new expense", new_expense_path, class: "btn-primary justify-center" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="bg-white rounded-3xl shadow-lg shadow-primary-900/5 border border-neutral-100 p-6">
      <h2 class="text-lg font-semibold text-neutral-900 mb-4">Filter transactions</h2>
      <%= form_with url: expenses_path, method: :get, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |f| %>
        <div>
          <%= f.date_field :start_date, value: params[:start_date], placeholder: "From", class: "form-control w-full px-4 py-3" %>
        </div>
        <div>
          <%= f.date_field :end_date, value: params[:end_date], placeholder: "To", class: "form-control w-full px-4 py-3" %>
        </div>
        <div>
          <%= f.collection_select :spender_id, current_user.couple.users, :id, :email, { include_blank: "All spenders", selected: params[:spender_id] }, class: "form-control w-full px-4 py-3" %>
        </div>
        <div class="md:col-span-1">
          <%= f.submit "Apply filters", class: "btn-secondary w-full md:w-auto md:self-end" %>
        </div>
      <% end %>
      <% if params[:start_date].present? || params[:end_date].present? || params[:spender_id].present? %>
        <%= link_to "Clear filters", expenses_path, class: "text-sm text-neutral-600 hover:text-primary-600 mt-4 inline-block" %>
      <% end %>
    </div>

    <%= render "balance_summary", balance_data: @balance_data, couple: current_user.couple %>

    <% if @transactions.any? %>
      <div class="mt-8">
        <h2 class="text-xl font-semibold text-neutral-900 mb-4">Transaction History</h2>
        <div class="bg-white rounded-2xl border border-neutral-200 p-6">
          <ul class="space-y-3">
            <% @transactions.each do |transaction| %>
              <%= render "transaction_item", transaction: transaction, current_user: current_user %>
            <% end %>
          </ul>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-2xl border-2 border-dashed border-neutral-200 p-12 text-center">
        <svg class="w-16 h-16 mx-auto text-neutral-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h3 class="text-lg font-semibold text-neutral-900 mb-2">No transactions found</h3>
        <p class="text-neutral-600 mb-6">Add your first expense to start tracking!</p>
        <%= link_to "Add new expense", new_expense_path, class: "btn-primary inline-flex" %>
      </div>
    <% end %>
  </div>
</div>
