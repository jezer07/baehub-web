<%
  show_link = local_assigns.fetch(:show_link, true)
  compact = local_assigns.fetch(:compact, false)
%>

<%= turbo_frame_tag "expense_#{expense.id}" do %>
<% if compact %>
<div class="py-2 border-b border-neutral-100 last:border-0">
  <div class="flex items-start justify-between gap-3">
    <div class="flex-1 min-w-0">
      <% if show_link %>
        <%= link_to expense_path(expense), class: "text-sm font-medium text-neutral-900 hover:text-primary-600 transition-colors block truncate" do %>
          <%= expense.title %>
        <% end %>
      <% else %>
        <p class="text-sm font-medium text-neutral-900 truncate"><%= expense.title %></p>
      <% end %>
      <p class="text-xs text-neutral-500 mt-0.5 truncate">
        <%= expense.incurred_on.strftime("%b %d") %> • <%= expense.spender == current_user ? "You" : user_display_name(expense.spender) %>
      </p>
    </div>
    <div class="text-sm font-semibold text-neutral-900 flex-shrink-0">
      <%= expense.formatted_amount %>
    </div>
  </div>
</div>
<% else %>
<div class="flex flex-col md:flex-row md:items-center gap-3 rounded-2xl border border-neutral-100 bg-white px-6 py-4 hover:shadow-md transition-shadow">
  <div class="flex items-center gap-4 flex-1 min-w-0">
    <div class="h-10 w-10 rounded-full bg-gradient-to-br from-primary-100 to-purple-100 flex items-center justify-center flex-shrink-0">
      <span class="text-primary-700 font-bold text-sm"><%= expense.currency_symbol %></span>
    </div>

    <div class="flex-1 min-w-0">
      <% if show_link %>
        <%= link_to expense_path(expense), class: "text-lg font-medium text-neutral-900 hover:text-primary-600 transition-colors block truncate" do %>
          <%= expense.title %>
        <% end %>
      <% else %>
        <p class="text-lg font-medium text-neutral-900 truncate"><%= expense.title %></p>
      <% end %>

      <div class="flex items-center gap-2 mt-1 min-w-0">
        <div class="text-xl font-bold text-neutral-900 flex-shrink-0">
          <%= expense.formatted_amount %>
        </div>
        <span class="text-neutral-400 flex-shrink-0">•</span>
        <div class="text-sm text-neutral-500 truncate min-w-0">
          <%= expense.split_summary %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-wrap items-center gap-2 flex-shrink-0">
    <span class="inline-flex items-center px-3 py-1 rounded-full bg-neutral-100 text-neutral-700 text-xs font-medium">
      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <%= expense.incurred_on.strftime("%b %d") %>
    </span>

    <span class="inline-flex items-center px-3 py-1 rounded-full bg-neutral-100 text-neutral-700 text-xs font-medium">
      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      <% if expense.spender == current_user %>
        You
      <% else %>
        <%= user_display_name(expense.spender) %>
      <% end %>
    </span>
  </div>
</div>
<% end %>
<% end %>
