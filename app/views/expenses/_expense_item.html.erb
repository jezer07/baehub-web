<%
  show_link = local_assigns.fetch(:show_link, true)
  compact = local_assigns.fetch(:compact, false)
%>

<%= turbo_frame_tag "expense_#{expense.id}" do %>
<% if compact %>
<div class="py-2.5 border-b border-neutral-100 last:border-0">
  <% if show_link %>
    <%= link_to expense_path(expense), data: { turbo_frame: "_top" }, class: "flex items-center justify-between gap-3 hover:bg-neutral-50 -mx-2 px-2 py-1.5 rounded-lg transition-colors" do %>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-neutral-800 leading-snug truncate"><%= expense.title %></p>
        <p class="text-xs text-neutral-400 mt-0.5 truncate">
          <%= expense.incurred_on.strftime("%b %d") %> &middot; <%= expense.spender == current_user ? "You" : user_display_name(expense.spender) %>
        </p>
      </div>
      <div class="text-sm font-semibold text-neutral-900 flex-shrink-0">
        <%= expense.formatted_amount %>
      </div>
    <% end %>
  <% else %>
    <div class="flex items-center justify-between gap-3">
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-neutral-800 leading-snug truncate"><%= expense.title %></p>
        <p class="text-xs text-neutral-400 mt-0.5 truncate">
          <%= expense.incurred_on.strftime("%b %d") %> &middot; <%= expense.spender == current_user ? "You" : user_display_name(expense.spender) %>
        </p>
      </div>
      <div class="text-sm font-semibold text-neutral-900 flex-shrink-0">
        <%= expense.formatted_amount %>
      </div>
    </div>
  <% end %>
</div>
<% else %>
<div class="flex flex-col md:flex-row md:items-center gap-3 rounded-xl border border-neutral-200/60 bg-white px-4 py-3.5 hover:shadow-card transition-all">
  <div class="flex items-center gap-3 flex-1 min-w-0">
    <div class="h-9 w-9 rounded-lg bg-accent-50 flex items-center justify-center flex-shrink-0">
      <span class="text-accent-700 font-bold text-xs"><%= expense.currency_symbol %></span>
    </div>

    <div class="flex-1 min-w-0">
      <% if show_link %>
        <%= link_to expense_path(expense), data: { turbo_frame: "_top" }, class: "text-sm font-medium text-neutral-800 hover:text-primary-600 transition-colors block truncate" do %>
          <%= expense.title %>
        <% end %>
      <% else %>
        <p class="text-sm font-medium text-neutral-800 truncate"><%= expense.title %></p>
      <% end %>

      <div class="flex items-center gap-2 mt-0.5 min-w-0">
        <div class="text-base font-bold text-neutral-900 flex-shrink-0">
          <%= expense.formatted_amount %>
        </div>
        <span class="text-neutral-300 flex-shrink-0">&middot;</span>
        <div class="text-xs text-neutral-400 truncate min-w-0">
          <%= expense.split_summary %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-wrap items-center gap-1.5 flex-shrink-0">
    <span class="inline-flex items-center px-2 py-0.5 rounded-md bg-neutral-50 text-neutral-600 border border-neutral-200 text-xs font-medium">
      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25"/>
      </svg>
      <%= expense.incurred_on.strftime("%b %d") %>
    </span>

    <span class="inline-flex items-center px-2 py-0.5 rounded-md bg-neutral-50 text-neutral-600 border border-neutral-200 text-xs font-medium">
      <% if expense.spender == current_user %>
        You
      <% else %>
        <%= user_display_name(expense.spender) %>
      <% end %>
    </span>
  </div>
</div>
<% end %>
<% end %>
