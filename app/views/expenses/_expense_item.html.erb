<%
  show_link = local_assigns.fetch(:show_link, true)
  compact = local_assigns.fetch(:compact, false)
%>

<div class="flex flex-col md:flex-row md:items-center gap-3 rounded-2xl border border-neutral-100 <%= compact ? 'bg-neutral-50 px-4 py-3' : 'bg-white px-6 py-4 hover:shadow-md transition-shadow' %>">
  <div class="flex items-center gap-4 flex-1">
    <div class="h-10 w-10 rounded-full bg-gradient-to-br from-primary-100 to-purple-100 flex items-center justify-center flex-shrink-0">
      <span class="text-primary-700 font-bold text-sm"><%= expense.currency_symbol %></span>
    </div>

    <div class="flex-1 min-w-0">
      <% if show_link %>
        <%= link_to expense_path(expense), class: "text-lg font-medium text-neutral-900 hover:text-primary-600 transition-colors block truncate" do %>
          <%= expense.title %>
        <% end %>
      <% else %>
        <p class="text-lg font-medium text-neutral-900 truncate"><%= expense.title %></p>
      <% end %>

      <div class="flex items-center gap-2 mt-1">
        <div class="<%= compact ? 'text-lg' : 'text-xl' %> font-bold text-neutral-900">
          <%= expense.formatted_amount %>
        </div>
        <span class="text-neutral-400">â€¢</span>
        <div class="text-sm text-neutral-500 truncate">
          <%= expense.split_summary %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-wrap items-center gap-2">
    <span class="<%= expense_status_badge_class(expense) %>">
      <% if expense.settled? %>
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Settled
      <% else %>
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
        Unsettled
      <% end %>
    </span>

    <span class="inline-flex items-center px-3 py-1 rounded-full bg-neutral-100 text-neutral-700 text-xs font-medium">
      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <%= expense.incurred_on.strftime("%b %d") %>
    </span>

    <span class="inline-flex items-center px-3 py-1 rounded-full bg-neutral-100 text-neutral-700 text-xs font-medium">
      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      <% if expense.spender == current_user %>
        You
      <% else %>
        <%= user_display_name(expense.spender) %>
      <% end %>
    </span>

    <% unless compact %>
      <span class="inline-flex items-center px-3 py-1 rounded-full bg-neutral-100 text-neutral-700 text-xs font-medium">
        <%= expense.currency %>
      </span>
    <% end %>
  </div>
</div>

