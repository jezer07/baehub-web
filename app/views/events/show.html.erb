<div class="bg-gradient-to-br from-white via-primary-50/60 to-purple-50/40 min-h-screen py-12">
  <div class="max-w-4xl mx-auto px-4 space-y-6">
    <%= link_to "← Back to events", events_path, class: "text-sm text-neutral-600 hover:text-primary-600" %>

    <div class="bg-white rounded-3xl shadow-xl shadow-primary-900/5 border border-neutral-100 overflow-hidden">
      <div class="p-8 <%= @event.in_progress? ? 'bg-gradient-to-r from-success-50 to-success-100' : (@event.starts_at < Time.current ? 'bg-gradient-to-r from-gray-50 to-gray-100' : 'bg-gradient-to-r from-primary-50 to-purple-50') %>">
        <h1 class="text-3xl font-bold text-neutral-900 mb-3"><%= @event.title %></h1>
        <p class="text-lg text-neutral-700 mb-3">
          <%= format_event_date_range(@event, current_user.couple.timezone) %>
        </p>
        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium <%= event_time_badge_class(@event) %>">
          <% if @event.in_progress? %>
            Happening now
          <% elsif @event.starts_at < Time.current %>
            Past
          <% else %>
            Upcoming
          <% end %>
        </span>
      </div>

      <div class="p-8 space-y-6">
        <% if @event.description.present? %>
          <div>
            <h3 class="text-sm font-semibold text-neutral-700 mb-2">Description</h3>
            <p class="text-neutral-700 leading-relaxed"><%= @event.description %></p>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% if @event.location.present? %>
            <div>
              <h3 class="text-sm font-semibold text-neutral-700 mb-2">Location</h3>
              <p class="text-neutral-600 flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= @event.location %>
              </p>
            </div>
          <% end %>

          <% if @event.category.present? %>
            <div>
              <h3 class="text-sm font-semibold text-neutral-700 mb-2">Category</h3>
              <p class="text-neutral-600 flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
                <%= @event.category %>
              </p>
            </div>
          <% end %>

          <% if @event.ends_at.present? && @event.duration_in_hours %>
            <div>
              <h3 class="text-sm font-semibold text-neutral-700 mb-2">Duration</h3>
              <p class="text-neutral-600 flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <%= @event.duration_in_hours %> hours
              </p>
            </div>
          <% end %>

          <div>
            <h3 class="text-sm font-semibold text-neutral-700 mb-2">All-day event</h3>
            <p class="text-neutral-600 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <%= @event.all_day? ? "Yes" : "No" %>
            </p>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-neutral-700 mb-2">Created by</h3>
            <p class="text-neutral-600"><%= @event.creator.email %> on <%= @event.created_at.strftime("%b %d, %Y") %></p>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-neutral-700 mb-2">Requires response</h3>
            <p class="text-neutral-600"><%= @event.requires_response? ? "Yes" : "No" %></p>
          </div>

          <% if @event.recurring? %>
            <div>
              <h3 class="text-sm font-semibold text-neutral-700 mb-2">Recurrence</h3>
              <p class="text-neutral-600 flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                <%= @event.recurrence_summary %>
              </p>
              <% if @event.next_occurrence.present? %>
                <p class="text-sm text-neutral-500 mt-1">Next: <%= @event.next_occurrence.strftime('%b %d, %Y') %></p>
              <% end %>
            </div>
          <% end %>

          <% if @event.color.present? %>
            <div>
              <h3 class="text-sm font-semibold text-neutral-700 mb-2">Color</h3>
              <div class="flex items-center gap-2">
                <div class="h-6 w-6 rounded-full border border-neutral-300" style="background-color: <%= @event.color %>"></div>
                <span class="text-neutral-600 text-sm"><%= @event.color %></span>
              </div>
            </div>
          <% end %>
        </div>

        <% if @event.requires_response? %>
          <% if @event.creator_id != current_user.id %>
            <div id="event_rsvp_section" class="border-t border-neutral-100 pt-6 mt-6">
              <h3 class="text-lg font-semibold text-neutral-900 mb-4">Your RSVP</h3>
              <% event_response = @event.event_responses.find_or_initialize_by(user: current_user) %>
              
              <% if event_response.persisted? && !event_response.pending? %>
                <div class="flex items-center gap-3 mb-4">
                  <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium <%= event_response.status_badge_class %>">
                    <%= event_response.status.humanize %>
                  </span>
                  <span class="text-sm text-neutral-600">
                    Responded on <%= event_response.responded_at.strftime('%b %d, %Y at %l:%M %p') %>
                  </span>
                </div>
                
                <p class="text-sm text-neutral-600 mb-3">Want to change your response?</p>
                <div class="flex gap-3">
                  <%= button_to "Accept", event_event_response_path(@event, event_response), method: :patch, params: { status: 'accepted' }, class: "btn-primary flex-1 justify-center" %>
                  <%= button_to "Maybe", event_event_response_path(@event, event_response), method: :patch, params: { status: 'pending' }, class: "px-6 py-3 rounded-xl font-medium text-neutral-700 bg-neutral-100 hover:bg-neutral-200 transition-colors justify-center flex items-center flex-1" %>
                  <%= button_to "Decline", event_event_response_path(@event, event_response), method: :patch, params: { status: 'declined' }, class: "btn-secondary flex-1 justify-center" %>
                </div>
              <% else %>
                <p class="text-sm text-neutral-600 mb-3">Please let us know if you can attend this event.</p>
                <div class="flex gap-3">
                  <%= button_to "Accept", event_event_responses_path(@event), method: :post, params: { status: 'accepted' }, class: "btn-primary flex-1 justify-center" %>
                  <%= button_to "Maybe", event_event_responses_path(@event), method: :post, params: { status: 'pending' }, class: "px-6 py-3 rounded-xl font-medium text-neutral-700 bg-neutral-100 hover:bg-neutral-200 transition-colors justify-center flex items-center flex-1" %>
                  <%= button_to "Decline", event_event_responses_path(@event), method: :post, params: { status: 'declined' }, class: "btn-secondary flex-1 justify-center" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <% partner = @event.couple.users.where.not(id: current_user.id).first %>
            <% if partner.present? %>
              <% partner_response = @event.event_responses.find_by(user: partner) %>
              <div class="border-t border-neutral-100 pt-6 mt-6">
                <h3 class="text-lg font-semibold text-neutral-900 mb-4">Partner's RSVP</h3>
                <% if partner_response.present? && !partner_response.pending? %>
                  <div class="flex items-center gap-3">
                    <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium <%= partner_response.status_badge_class %>">
                      <%= partner_response.status.humanize %>
                    </span>
                    <span class="text-sm text-neutral-600">
                      Responded on <%= partner_response.responded_at.strftime('%b %d, %Y at %l:%M %p') %>
                    </span>
                  </div>
                <% else %>
                  <p class="text-sm text-neutral-600">Awaiting response from your partner.</p>
                <% end %>
              </div>
            <% end %>
          <% end %>
        <% end %>

        <p class="text-xs text-neutral-500 pt-4 border-t border-neutral-100">
          All times shown in <%= timezone_abbreviation(current_user.couple.timezone) %>
        </p>
      </div>

      <div class="px-8 py-6 bg-neutral-50 border-t border-neutral-100 flex flex-col sm:flex-row gap-3 sm:justify-between">
        <%= link_to "Edit event", edit_event_path(@event), class: "btn-secondary justify-center" %>
        <%= button_to "Delete event", event_path(@event), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this event?" }, class: "px-6 py-3 rounded-xl font-medium text-white bg-red-600 hover:bg-red-700 transition-colors justify-center flex items-center" %>
      </div>
    </div>
  </div>
</div>

